{
	"name": "panoptes",
	"version": "0.1.0",
	"private": true,
	"description": "Test visualization platform for the testing pyramid",
	"workspaces": ["apps/*", "packages/*", "packages/reporters/*"],
	"scripts": {
		"dev:web": "bun --cwd apps/web dev",
		"dev": "bun run dev:web",
		"build": "bun run --cwd apps/web build",
		"build:packages": "bun run build:shared && bun run build:reporters && bun run build:cli",
		"build:shared": "bun run --cwd packages/shared build",
		"build:reporters": "bun run --cwd packages/reporters/vitest build && bun run --cwd packages/reporters/playwright build",
		"build:cli": "bun run --cwd packages/cli build",
		"publish:npm": "bash scripts/publish-npm.sh",
		"lint": "biome check .",
		"lint:fix": "biome check --write .",
		"format": "biome format --write .",
		"typecheck": "bun run --cwd apps/web typecheck",
		"test": "bun test tests apps/web/src",
		"test:vitest": "bunx vitest run",
		"test:coverage": "bunx vitest run --coverage",
		"test:e2e": "bun run --cwd apps/web test:e2e",
		"test:e2e:ui": "bun run --cwd apps/web test:e2e:ui",
		"ci": "bun run lint && bun run typecheck && bun run test && bun run build",
		"prepare": "bun run install-git-hooks",
		"install-git-hooks": "cp scripts/pre-commit .git/hooks/pre-commit && chmod +x .git/hooks/pre-commit"
	},
	"devDependencies": {
		"@biomejs/biome": "^1.8.0",
		"@testing-library/jest-dom": "^6.9.1",
		"@testing-library/react": "^16.3.2",
		"@testing-library/user-event": "^14.6.1",
		"@types/node": "^20.10.0",
		"@vitest/coverage-v8": "^4.0.18",
		"@vitest/ui": "^4.0.18",
		"convex": "^1.12.0",
		"jsdom": "^27.4.0",
		"typescript": "^5.3.3",
		"vitest": "^4.0.18"
	},
	"engines": {
		"bun": ">=1.0.0"
	},
	"dependencies": {
		"@ai-sdk/openai": "^3.0.23",
		"@playwright/test": "^1.58.1",
		"ai": "^6.0.64",
		"zod": "^4.3.6"
	}
}
